{
  "name": "capacitor-wallpaper-plugin",
  "version": "1.0.0",
  "description": "Capacitor plugin for setting static and live wallpapers on Android",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/",
    "dist/",
    "src/"
  ],
  "author": "Umesh Dafda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Turtlebase/capacitor-wallpaper-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Turtlebase/capacitor-wallpaper-plugin/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "wallpaper",
    "android",
    "live-wallpaper",
    "video-wallpaper"
  ],
  "scripts": {
    "verify": "npm run verify:android && npm run verify:web",
    "verify:android": "cd android && ./gradlew clean build && cd ..",
    "verify:web": "npm run build",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^7.0.0"
  },
  "capacitor": {
    "android": {
      "src": "android"
    }
  }
}
